<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimg"
    tools:context=".ui.SweetDescActivity">

    <ScrollView
        android:id="@+id/scrollRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavBar">

        <LinearLayout
            android:id="@+id/pageRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TOP PRODUCT SECTION -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productTopSection"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_350sdp">

                <ImageView
                    android:id="@+id/productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.95"
                    android:scaleType="centerCrop"
                    android:src="@drawable/cupcake1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/backText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:elevation="6dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Back"
                    android:textColor="@color/orange"
                    android:textSize="@dimen/_14ssp"
                    app:layout_constraintBottom_toTopOf="@id/productTitle"
                    app:layout_constraintStart_toEndOf="@id/backButton"
                    app:layout_constraintTop_toTopOf="@id/backButton"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="200dp"
                    android:elevation="6dp"
                    android:src="@drawable/outline_arrow_back_ios_new_24"
                    android:tint="@color/orange"
                    app:layout_constraintBottom_toTopOf="@+id/productTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/productTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:elevation="6dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Chocolate Cupcake"
                    android:textColor="#FFC68A"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/productRating"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <RatingBar
                    android:id="@+id/productRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_4sdp"
                    android:elevation="3dp"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:progressTint="#F59E0B"
                    android:rating="4.5"
                    android:secondaryProgressTint="#CFA983"
                    android:stepSize="0.5"
                    app:layout_constraintBottom_toTopOf="@id/ratingValue"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/ratingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:elevation="6dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="4.8"
                    android:textColor="#F59E0B"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- PRODUCT DETAILS SECTION -->
            <LinearLayout
                android:id="@+id/productDetailsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_16sdp"
                android:orientation="vertical"
                android:paddingStart="@dimen/_16sdp"
                android:paddingEnd="@dimen/_16sdp">

                <!-- STAR ROW -->


                <!-- SIZE -->
                <LinearLayout
                    android:id="@+id/sizeRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/sizeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Size"
                        android:textColor="#E6C9A3"
                        android:textSize="@dimen/_14ssp" />

                    <RadioGroup
                        android:id="@+id/sizeGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12sdp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/sizeRegular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Regular"
                            android:textColor="#FFC68A" />

                        <RadioButton
                            android:id="@+id/sizeMedium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medium"
                            android:textColor="#FFC68A" />

                        <RadioButton
                            android:id="@+id/sizeLarge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Large"
                            android:textColor="#FFC68A" />
                    </RadioGroup>
                </LinearLayout>

                <!-- QUANTITY -->
                <LinearLayout
                    android:id="@+id/qtyLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_36sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/qty_background"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="-"
                        android:textColor="#F59E0B"
                        android:textSize="@dimen/_18ssp" />

                    <TextView
                        android:id="@+id/txtQuantity"
                        android:layout_width="@dimen/_36sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/_16ssp" />

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="@dimen/_32sdp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="#F59E0B"
                        android:textSize="@dimen/_18ssp" />
                </LinearLayout>

                <!-- TOTAL PRICE -->
                <TextView
                    android:id="@+id/totalPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="$4.00"
                    android:textColor="#FFC68A"
                    android:textSize="@dimen/_20ssp"
                    android:textStyle="bold" />

                <!-- DESCRIPTION -->
                <TextView
                    android:id="@+id/descLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Description"
                    android:textColor="#E6C9A3"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/productDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Decadent chocolate cupcake topped with smooth chocolate frosting and rich chocolate drizzle."
                    android:textColor="#CFA983"
                    android:textSize="@dimen/_13ssp" />

                <!-- ADD TO CART -->
                <Button
                    android:id="@+id/addToCartButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_52sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:backgroundTint="#F59E0B"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Add to Cart"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15ssp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:layout_marginStart="@dimen/_24sdp"
                    android:layout_marginEnd="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:background="@drawable/faded_divider_thick" />

                <!-- CUSTOMER REVIEWS -->
                <TextView
                    android:id="@+id/reviewsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_24sdp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Customer Reviews"
                    android:textColor="#FFC68A"
                    android:textSize="@dimen/_16ssp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/reviewsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_review" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <androidx.cardview.widget.CardView
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_margin="@dimen/_10sdp"
        app:cardBackgroundColor="#2A1A12"
        app:cardCornerRadius="@dimen/_24sdp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <!-- HOME (ACTIVE) -->
            <LinearLayout
                android:id="@+id/navHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/outline_home_24"
                    android:tint="#F59E0B" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Home"
                    android:textColor="#F59E0B"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <!-- ORDERS -->
            <LinearLayout
                android:id="@+id/navOrders"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/outline_gamepad_circle_left_24"
                    android:tint="#CFA983" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Categories"
                    android:textColor="#CFA983"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

            <!-- CART WITH BADGE -->
            <LinearLayout
                android:id="@+id/navCart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="@dimen/_28sdp"
                    android:layout_height="@dimen/_28sdp">

                    <!-- Cart Icon -->
                    <ImageView
                        android:id="@+id/cartIcon"
                        android:layout_width="@dimen/_24sdp"
                        android:layout_height="@dimen/_24sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/outline_shopping_cart_24"
                        android:tint="#CFA983" />

                    <!-- PERFECT ROUND BADGE -->
                    <TextView
                        android:id="@+id/cartBadge"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:layout_gravity="top|end"
                        android:background="@drawable/circle"
                        android:gravity="center"
                        android:text="1"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@android:color/white"
                        android:includeFontPadding="false" />
                </FrameLayout>

                <!-- CART LABEL -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="Cart"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="#CFA983"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>



            <!-- PROFILE -->
            <LinearLayout
                android:id="@+id/navProfile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:src="@drawable/outline_person_24"
                    android:tint="#CFA983" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Profile"
                    android:textColor="#CFA983"
                    android:textSize="@dimen/_10ssp" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>
