<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adminSweetItemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_12sdp"
    app:cardCornerRadius="@dimen/_16sdp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/cardview_shadow_end_color">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_12sdp">

        <!-- IMAGE -->
        <ImageView
            android:id="@+id/sweetImage"
            android:layout_width="@dimen/_56sdp"
            android:layout_height="@dimen/_56sdp"
            android:background="@drawable/circle"
            android:scaleType="centerCrop"
            android:src="@drawable/cupcake1" />

        <!-- PRICE (TOP RIGHT) -->
        <TextView
            android:id="@+id/sweetPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="$5.00"
            android:textColor="#FFC68A"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/poppins_semibold" />

        <!-- NAME -->
        <TextView
            android:id="@+id/sweetName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/sweetImage"
            android:layout_marginStart="@dimen/_12sdp"
            android:layout_toStartOf="@id/sweetPrice"
            android:text="Chocolate Cupcake"
            android:textColor="#FFC68A"
            android:textSize="@dimen/_14ssp"
            android:fontFamily="@font/poppins_medium" />

        <!-- SUBTITLE -->
        <TextView
            android:id="@+id/sweetCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/sweetName"
            android:layout_toEndOf="@id/sweetImage"
            android:layout_marginStart="@dimen/_12sdp"
            android:text="Cupcake - $5.00"
            android:textColor="#CFA983"
            android:textSize="@dimen/_12ssp"
            android:fontFamily="@font/poppins_regular" />

        <!-- EDIT BUTTON -->
        <androidx.cardview.widget.CardView
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/sweetPrice"
            android:layout_marginTop="@dimen/_6sdp"
            app:cardCornerRadius="@dimen/_14sdp"
            app:cardBackgroundColor="#C26A1C"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/_10sdp"
                android:paddingEnd="@dimen/_12sdp">

                <ImageView
                    android:id="@+id/editIcon"
                    android:layout_width="@dimen/_16sdp"
                    android:layout_height="@dimen/_16sdp"
                    android:src="@drawable/outline_edit_24"
                    android:layout_marginEnd="@dimen/_6sdp"
                    app:tint="#FFFFFF" />

                <TextView
                    android:id="@+id/editText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_12ssp"
                    android:fontFamily="@font/poppins_medium" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
