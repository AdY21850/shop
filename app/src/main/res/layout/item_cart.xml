<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_8sdp"
    app:cardCornerRadius="@dimen/_12sdp"

    app:cardBackgroundColor="@color/cardview_shadow_end_color"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/glitter_overlay"
        android:padding="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/productImageCard"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentStart="true"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardUseCompatPadding="false"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/productImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/profile1" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/productImageCard"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="Chocolate Cupcake"
            android:textColor="#F5C28B"
            android:textStyle="bold"
            android:textSize="@dimen/_16ssp" />

        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/productName"
            android:layout_toEndOf="@+id/productImageCard"
            android:layout_marginStart="@dimen/_10sdp"
            android:text="â‚¹4.00"
            android:textColor="#F59E0B"
            android:textStyle="bold"
            android:textSize="@dimen/_14ssp" />

        <ImageView
            android:id="@+id/removeItem"
            android:layout_width="@dimen/_18sdp"
            android:layout_height="@dimen/_18sdp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/outline_x_circle_24"
            android:tint="#F59E0B" />

        <LinearLayout
            android:id="@+id/qtyLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/removeItem"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal"
            android:background="@drawable/qty_background"
            android:gravity="center">

            <TextView
                android:id="@+id/btnMinus"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="match_parent"
                android:text="-"
                android:textSize="@dimen/_18ssp"
                android:textColor="#F59E0B"
                android:gravity="center" />

            <TextView
                android:id="@+id/txtQuantity"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="match_parent"
                android:text="1"
                android:textColor="@android:color/white"
                android:gravity="center" />

            <TextView
                android:id="@+id/btnPlus"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="match_parent"
                android:text="+"
                android:textSize="@dimen/_18ssp"
                android:textColor="#F59E0B"
                android:gravity="center" />
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
