<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- HEADER CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileHeaderCard"
        android:layout_width="0dp"
        android:layout_height="220dp"
        app:cardCornerRadius="28dp"
        app:cardBackgroundColor="#8C8C8C"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Profile Image -->
            <ImageView
                android:id="@+id/editProfileImage"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profile"
                android:background="@drawable/circle" />

            <!-- Edit Icon -->
            <ImageView
                android:id="@+id/editImageBtn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignBottom="@id/editProfileImage"
                android:layout_alignEnd="@id/editProfileImage"
                android:background="@drawable/circle"
                android:padding="6dp"
                android:src="@drawable/outline_edit_24"
                android:tint="@android:color/black" />

            <!-- Username -->
            <TextView
                android:id="@+id/displayName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/editProfileImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="ADITYA SHARMA"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <!-- Handle -->
            <TextView
                android:id="@+id/displayHandle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/displayName"
                android:layout_centerHorizontal="true"
                android:text="@aditya_sharma1204"
                android:textColor="#DDDDDD"
                android:textSize="13sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- FORM CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/formCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-60dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="18dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/profileHeaderCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="18dp">

            <!-- FULL NAME -->
            <TextView
                android:text="Full Name"
                android:textStyle="bold"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/editNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="John Doe"
                android:background="@android:color/transparent" />

            <!-- EMAIL -->
            <TextView
                android:layout_marginTop="12dp"
                android:text="Email or Phone"
                android:textStyle="bold"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/editEmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="email@example.com"
                android:background="@android:color/transparent" />

            <!-- PHONE -->
            <TextView
                android:layout_marginTop="12dp"
                android:text="Phone"
                android:textStyle="bold"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/editPhoneInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="**********"
                android:inputType="phone"
                android:background="@android:color/transparent" />

            <!-- DOB -->
            <TextView
                android:layout_marginTop="12dp"
                android:text="Date Of Birth"
                android:textStyle="bold"
                android:textColor="#333333" />

            <EditText
                android:id="@+id/editDobInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="dd-mm-yyyy"
                android:focusable="false"
                android:background="@android:color/transparent" />

            <!-- SAVE BUTTON -->
            <Button
                android:id="@+id/saveProfileBtn"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Save Changes"
                android:layout_marginTop="20dp"
                android:backgroundTint="#F59E0B"
                android:textColor="@android:color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
